<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">

    <ProgressBar
        android:id="@+id/task_messages_avatar_progress_bar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center|center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/task_message_avatar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/assigned_user_icon"
        android:contentDescription="@string/friend_profile_pic"/>

    <TextView
        android:id="@+id/task_message_content"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="4dp"
        android:text="@string/task_messages"
        android:textSize="16sp"/>

</LinearLayout>